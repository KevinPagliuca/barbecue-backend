{
  "compilerOptions": {   
    "target": "es5",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "typeRoots": ["./src/@types", "node_modules/@types"],
    "baseUrl": "./src",                                
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"],
      "@errors/*": ["shared/errors/*"],
      "@utils/*": ["utils/*"],
    },
  }
}
