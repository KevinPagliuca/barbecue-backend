// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(uuid())
  name       String
  email      String
  birthday   DateTime
  password   String
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  Churras    Churras[]
}

model Churras {
  id          String   @id @default(uuid())
  title       String
  description String
  date        DateTime
  hour        String
  location    String

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  user_id    String

  participants Participants[]
  users        User           @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

model Participants {
  id         String @id @default(uuid())
  name       String
  value      Float
  churras_id String

  churras Churras @relation(fields: [churras_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
}
